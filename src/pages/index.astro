---
import BaseLayout from "../layout/BaseLayout.astro";
import Hero from "./index/Hero.astro";
import AboutSection from "./index/AboutSection.astro";
import CourseContainer from "../components/courseCard/CourseContainer.astro";
import CardContainer from "../components/cardContainer/CardContainer.astro";
import { courseList } from "../data/courseList";
import { serviceList } from "../data/serviceList";
import LatestPost from "./index/LatestPost.astro";

---

<BaseLayout

>
  <Hero />
  <AboutSection />
  <CourseContainer
    courses={courseList}
    title="Descubre los cursos de belleza y de formación profesional"
  />

  <CardContainer
    title="Descubre los cursos de belleza y de formación profesional"
    items={serviceList}
    showSubtitle={false}
  />
  <LatestPost />

</BaseLayout>
