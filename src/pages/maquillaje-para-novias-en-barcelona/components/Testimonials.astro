<script>
  document.addEventListener("DOMContentLoaded", () => {
    let currentIndex = 0;
    const slider = document.querySelector(".testimonials-slider") as HTMLElement;
    const testimonialCards = document.querySelectorAll(".testimonial-card");
    const totalItems = testimonialCards.length;

    // Validaci√≥n de existencia del slider
    if (!slider || totalItems === 0) return;

    // Duplicamos los testimonios
    const clonedTestimonials = slider.innerHTML;
    slider.innerHTML += clonedTestimonials;

    function moveSlider() {
      currentIndex++;

      if (currentIndex >= totalItems) {
        currentIndex = 0;
        slider.style.transition = "none";
        slider.style.transform = `translateX(0%)`;
        setTimeout(() => {
          slider.style.transition = "transform 1s ease";
        }, 50);
      }

      const offset = -100 * currentIndex;
      slider.style.transform = `translateX(${offset}%)`;
    }

    setInterval(moveSlider, 5000);
  });
</script>
